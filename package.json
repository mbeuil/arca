{
  "name": "archa",
  "author": "mbeuil",
  "version": "0.1.1",
  "description": "Lightweight solution for React context creation.",
  "license": "MIT",
  "keywords": [
    "react"
  ],
  "engines": {
    "node": ">=10"
  },
  "main": "dist/index.js",
  "module": "dist/archa.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbeuil/archa.git"
  },
  "bugs": {
    "url": "https://github.com/mbeuil/archa/issues"
  },
  "homepage": "https://github.com/mbeuil/archa#readme",
  "files": [
    "dist",
    "src"
  ],
  "size-limit": [
    {
      "path": "dist/archa.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/archa.esm.js",
      "limit": "10 KB"
    }
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
